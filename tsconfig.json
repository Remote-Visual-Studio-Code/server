{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES6"],
        "module": "commonjs",
        "rootDir": "./src",
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./out/src",
        "removeComments": true,
        "declarationDir": "./out/declaration",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "moduleResolution": "Node"
    },
    "exclude": ["node_modules", "out", "src/ts", "scripts"]
}
