{
    "name": "rvsc-server",
    "version": "1.0.0",
    "description": "Server for Remote Visual Studio Code.",
    "scripts": {
        "build": "webpack --config webpack.server.js && webpack --config webpack.react.js",
        "test": "jest",
        "start": "yarn build && node dist/server.js",
        "lint": "eslint src --ext .ts && prettier --write .",
        "watch:client": "concurrently \"webpack --config webpack.server.js && node dist/server.js\" \"webpack --config webpack.react.js --watch\"",
        "watch:server": "concurrently \"webpack --config webpack.react.js\" \"webpack --config webpack.server.js --watch && node dist/server.js\"",
        "css": "postcss client/assets/tailwind.css -o client/assets/main.css",
        "watch": "concurrently \"webpack --config webpack.react.js --watch\" \"webpack --config webpack.server.js --watch && node dist/server.js\"",
        "prepare": "husky install",
        "buildDocker": "docker build -t rvsc-server ."
    },
    "main": "dist/server.js",
    "author": "Exortions",
    "license": "MIT",
    "private": true,
    "dependencies": {
        "@emotion/react": "^11.10.4",
        "@emotion/styled": "^11.10.4",
        "@fontsource/roboto": "^4.5.8",
        "@monaco-editor/react": "^4.4.6",
        "@mui/icons-material": "^5.10.6",
        "@mui/lab": "^5.0.0-alpha.102",
        "@mui/material": "^5.10.8",
        "ansi-to-html": "^0.7.2",
        "body-parser": "^1.20.0",
        "chalk": "4.1.2",
        "cors": "^2.8.5",
        "dompurify": "^2.4.0",
        "express": "^4.18.1",
        "jsonwebtoken": "^8.5.1",
        "monaco-editor": "^0.34.0",
        "mongoose": "^6.6.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "socket.io": "^4.5.2",
        "socket.io-client": "^4.5.2",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.19.3",
        "@types/dompurify": "^2.3.4",
        "@types/express": "^4.17.14",
        "@types/jest": "^29.1.1",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/node": "^18.7.23",
        "@types/react": "^18.0.21",
        "@types/react-dom": "^18.0.6",
        "@types/socket.io": "^3.0.2",
        "@types/socket.io-client": "^3.0.0",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.39.0",
        "@typescript-eslint/parser": "^5.39.0",
        "autoprefixer": "^10.4.12",
        "concurrently": "^7.4.0",
        "css-loader": "^6.7.1",
        "dotenv-webpack": "^8.0.1",
        "eslint": "^8.25.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-node": "^4.1.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.1",
        "jest": "^29.1.2",
        "postcss": "^8.4.17",
        "postcss-cli": "^10.0.0",
        "postcss-loader": "^7.0.1",
        "postcss-preset-env": "^7.8.2",
        "prettier": "^2.7.1",
        "speed-measure-webpack-plugin": "^1.5.0",
        "style-loader": "^3.3.1",
        "supertest": "^6.2.4",
        "tailwindcss": "^3.1.8",
        "ts-jest": "^29.0.3",
        "ts-loader": "^9.4.1",
        "typescript": "^4.8.4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-node-externals": "^3.0.0"
    }
