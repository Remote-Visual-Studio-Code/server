{
    "name": "rvsc-server",
    "version": "1.0.0",
    "description": "Server for Remote Visual Studio Code.",
    "main": "src/server.js",
    "scripts": {
        "start": "yarn run lint && yarn run compile && node out/src/server.js",
        "buildweb": "cd src/ts && rm -rf ./out/min && mkdir out\\min && tsc && node min/minify.js",
        "moveweb": "rm -rf out/src/web && mkdir out\\src\\web && mv src/ts/out/min/* out/src/web && rm -rf src/ts/out && rm -rf out/src/web/index.html",
        "compile": "tsc && copyfiles -u 1 src/**/*.ejs out/src && copyfiles -u 1 src/**/*.json out/src && yarn run buildweb && yarn run moveweb && node scripts/minify.js",
        "lint": "eslint src --fix"
    },
    "author": "Exortions",
    "license": "MIT",
    "dependencies": {
        "axios": "^0.26.1",
        "body-parser": "^1.20.0",
        "cities.json": "^1.1.5",
        "colors": "^1.4.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "ejs": "^3.1.7",
        "express": "^4.17.3",
        "express-ejs-layouts": "^2.5.1",
        "mongoose": "^6.2.10",
        "uglify-js": "^3.15.4",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.2",
        "@types/cors": "^2.8.12",
        "@types/ejs": "^3.1.0",
        "@types/express": "^4.17.13",
        "@types/express-ejs-layouts": "^2.5.0",
        "@types/uglify-js": "^3.13.2",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^2.0.0",
        "@typescript-eslint/parser": "^2.0.0",
        "copyfiles": "^2.4.1",
        "eslint": "^6.1.0",
        "eslint-config-airbnb-typescript": "^4.0.1",
        "eslint-config-node": "^4.0.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-node": "^9.1.0",
        "eslint-plugin-prettier": "^3.1.0",
        "inquirer": "^8.2.3",
        "prettier": "^1.18.2",
        "typescript": "^4.6.3"
    }
}
